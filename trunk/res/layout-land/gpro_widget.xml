<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="83dp"
    android:paddingRight="8dip"
    android:paddingLeft="8dip"
    android:background="@drawable/background_black">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical" 
	    android:layout_width="526px"
	    android:layout_height="fill_parent">
	    <TextView android:id="@+id/title" 
	        android:layout_width="wrap_content"
	        android:layout_height="50px"
	        android:layout_weight="3"
	        android:gravity="center_horizontal"
	        android:textStyle="bold"
	        android:textSize="10sp"
	        android:textColor="#FFFFFF"
	        android:text="Gpro Viewer"/>
	    <TextView android:id="@+id/text" 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:textStyle="bold"
	        android:textSize="18sp"
	        android:layout_marginLeft="10dip"
	        android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal" 
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent">
	    <ImageView android:layout_height="115px" android:layout_width="1dp" android:background="#999"/>
	    <ImageButton
	        android:id="@+id/race_button"
	        android:background="@android:color/transparent"
	        android:layout_width="85px"
	        android:layout_height="fill_parent"
	        android:src="@drawable/button_race_layout"/>
	    <ImageView android:layout_height="115px" android:layout_width="1dp" android:background="#999"/>
	    <ImageButton
	        android:id="@+id/grid_button"
	        android:background="@android:color/transparent"
	        android:layout_width="85px"
	        android:layout_height="fill_parent"
	        android:src="@drawable/button_chrono_layout"/>
    </LinearLayout>
</LinearLayout>
