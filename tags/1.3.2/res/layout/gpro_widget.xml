<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="83dip"
    android:paddingRight="8dip"
    android:paddingLeft="8dip"
    android:background="@drawable/background_black">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical" 
	    android:layout_width="210dip"
	    android:layout_height="fill_parent">
	    <TextView android:id="@+id/title" 
	        android:layout_width="wrap_content"
	        android:layout_height="50dip"
	        android:layout_weight="3"
	        android:gravity="center_horizontal"
	        android:textStyle="bold"
	        android:textSize="10sp"
	        android:textColor="#FFFFFF"
	        android:text="Gpro Viewer"/>
	    <TextView android:id="@+id/text" 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="4"
	        android:gravity="center_horizontal"
	        android:textStyle="bold"
	        android:textSize="18sp"
	        android:layout_marginLeft="10dip"
	        android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal" 
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent">
	    <ImageView android:layout_height="100dip" android:layout_marginLeft="40dip" android:layout_width="1dip" android:background="#999"/>
	    <ImageButton
	        android:id="@+id/grid_button"
	        android:background="@android:color/transparent"
	        android:layout_width="50dip"
	        android:layout_height="fill_parent"
	        android:src="@drawable/ic_tab_right_arrow"/>
    </LinearLayout>
</LinearLayout>
