<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableRow>
	    <RelativeLayout
	        android:id="@+id/q1_cell" 
	        android:layout_width="200dip"
	        android:layout_height="fill_parent">
	        
	        <TextView
	            android:id="@+id/line_position"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="6dip"
                android:singleLine="true"
	            android:textSize="22sp"/>
	    
	        <TextView
	            android:id="@+id/q1_line_driver_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_toRightOf="@+id/line_position"
	            android:layout_alignParentTop="true"
                android:singleLine="true"
                android:ellipsize="marquee"
	            android:textSize="16sp"/>

            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/q1_line_driver_name">
	            <ImageView 
	                android:id="@+id/q1_tyres"
	                android:layout_height="20dip"
	                android:layout_width="20dip"
	                android:layout_marginRight="5dip"/>        
	            <ImageView 
	                android:id="@+id/q1_flag"
	                android:layout_height="20dip"
	                android:layout_width="20dip"/>
            </LinearLayout>
        
	        <TextView  
	            android:id="@+id/q1_line_time"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:layout_toRightOf="@+id/line_position"
	            android:layout_alignParentBottom="true"
	            android:layout_below="@+id/q1_line_driver_name"
	            android:textSize="14sp"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:id="@+id/q2_cell" 
	        android:layout_height="fill_parent"
            android:layout_width="200dip"
	        android:paddingLeft="40dip">
	        
	        <TextView
	            android:id="@+id/q2_line_driver_name"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_centerVertical="true"
	            android:singleLine="true"
	            android:ellipsize="marquee"
	            android:textSize="16sp"/>

            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal" 
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/q2_line_driver_name">
                <ImageView 
                    android:id="@+id/q2_tyres"
                    android:layout_height="20dip"
                    android:layout_width="20dip"
                    android:layout_marginRight="5dip"/>        
                <ImageView 
                    android:id="@+id/q2_flag"
                    android:layout_height="20dip"
                    android:layout_width="20dip"/>
            </LinearLayout>
        
	        <TextView  
	            android:id="@+id/q2_line_time"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" 
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentRight="true"
	            android:layout_below="@+id/q2_line_driver_name"
	            android:textSize="14sp"/>
	    </RelativeLayout>
    </TableRow>
</TableLayout>
